{
  "name": "óleo",
  "version": "1.0",
  "description": "óleo is a sleek project-based time management Chrome Application that can sync to Google Spreadsheets allowing for collaborative tracking.",
  "permissions": [
    "identity", "storage",
    "https://www.googleapis.com/",
    "https://accounts.google.com/",
    "https://ssl.gstatic.com/",
    "https://spreadsheets.google.com/feeds/",
    "https://docs.google.com/feeds/"
  ],
  "oauth2": {
    "client_id": "353834450643-v74s1mh6voujqvr3h70sv1u58omsogap.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  },
  "browser_action": {
     "default_title": "óleo",
     "default_icon": {
       "19": "style/img/icon19.png",
       "38": "style/img/icon38.png"
     },
     "default_popup": "app.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}

